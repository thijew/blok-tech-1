<!DOCTYPE html>
<html lang="en">

<%- include("../components/head"); %>

    <body>
        <%- include("../components/header"); %>

            <main>
                <h1>Reserveringen</h1>

                <div class="reserve-day">
                    <ul>
                        <% for (let i = 0; i < 7; i++) { %>
                            <% const date = new Date(); %>
                            <% date.setDate(date.getDate() + i); %>
                            <li><%= date.toLocaleDateString('nl-NL', { weekday: 'long', month: 'long', day: 'numeric' }) %></li>

                            <!-- <li>Reserveringen: </li> -->
                          <% } %>
                    </ul>
                </div>

                <div class="weatherApi">
                </div>

            </main>

            <%- include("../components/footer"); %>

            <script src="/scripts/weather-api.js"></script>
    </body>

</html>


