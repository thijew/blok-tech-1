<!DOCTYPE html>
<html lang="en">

<%- include("../components/head"); %>

    <body>
        <%- include("../components/header"); %>

            <main>
                <h1>Reserveringen</h1>
                <ul class="adminContainer">
                    <li>
                        <section class="left">
                            <% for (let i=0; i < 7; i++) { %>
                                <% const date=new Date()%>
                                    <% date.setDate(date.getDate() + i) %>
                    <li class="day">
                        <%= date.toLocaleDateString('nl-NL', { weekday: 'long' , month: 'long' , day: 'numeric' }) %>
                    </li>
                    <li class="reservations">Reserveringen: <%= totalChickenReservations %>
                    </li>
                </ul>
                <% } %>
                    </section>

                    <section class="right">
                        <% for (let i=0; i < 7; i++) { %>
                            <ul class="rightContainer">
                                <li class="weatherCode">
                                    <%= weather.daily.weathercode[i] %>
                                </li>
                                <li class="weatherTemp"><%- weather.daily.temperature_2m_min[0] + i %> °C tot <%-
                                            weather.daily.temperature_2m_max[0] + i %> °C</li>
                                <% if (weather.daily.rain_sum[i]> 0) { %>
                                    <li class="weatherRain">
                                        <%- weather.daily.rain_sum[i] %> mm
                                    </li>
                                    <% } %>
                            </ul>
                            <% } %>
                    </section>
                    </li>
                    </ul>


            </main>

            <%- include("../components/footer"); %>

                <script src="scripts/weather-api.js"></script>
                <script src="scripts/weather-code.js"></script>



    </body>

</html>